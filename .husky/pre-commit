#!/bin/sh

# Auto-sync AGENTS.md from CLAUDE.md before commit
if git diff --cached --name-only | grep -q "^CLAUDE.md$"; then
  echo "ðŸ”„ Syncing CLAUDE.md â†’ AGENTS.md..."
  if ! node scripts/sync-agents.cjs; then
    echo "âŒ Error: Failed to sync AGENTS.md from CLAUDE.md. Aborting commit." >&2
    exit 1
  fi
  echo "âœ… Adding AGENTS.md to commit..."
  git add AGENTS.md
fi
